PROJECT_NAME=LLM Chat API
VERSION=1.0.0
API_V1_STR=/api

# AWS DynamoDB Configuration
# For local DynamoDB, use: http://localhost:8000
# For AWS DynamoDB, leave DYNAMODB_ENDPOINT_URL empty and configure AWS credentials
DYNAMODB_ENDPOINT_URL=http://localhost:8000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB Table Names
USERS_TABLE=chat_app_users
MODELS_TABLE=chat_app_models
ROLES_TABLE=chat_app_roles
CHATS_TABLE=chat_app_chats

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173"]
